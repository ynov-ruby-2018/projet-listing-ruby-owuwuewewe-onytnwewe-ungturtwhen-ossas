<div class="row">
  <% @articles.each do |article| %>
    <div class="col s12 m12">
      <div class="card">
        <div class="row">
          <div class="col s12" style="margin: 1rem">
            <h5>
              <%= link_to article.title, article_path(article.id) %>
            </h5>
          </div>
          <div class="col s12" style="margin: 1rem">
              DATE - <span class="chip blue darken-4 white-text"> <%= article.category.name %> </span>
          </div>
          <div class="col s12 clearfix">
            <img src="https://img.igen.fr/2018/4/macgpic-1523612224-30206656631734-sc-jpt.jpg" class="img1">
            <div style="padding: 1rem">
              <%= article.content %>
              <div style="padding: 1rem">
                <%= article.price %> <%= link_to t('article_devise.money') %>
                <% if article.user.id ===  current_user.id %>

                  <% else %>
                  <button style="float: right">
                    <%= link_to "contact le vendeur", account_conversations_path(sender_id: current_user.id, receiver_id: article.user.id), method: :post %>
                  </button>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
  .img1 {
    float: left;
    width: 20rem;
    height: 20rem;
    margin: 1rem;
  }

  .clearfix {
    overflow: auto;
  }


</style>