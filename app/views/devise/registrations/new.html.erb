<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%=devise_error_messages!%>

<div id="login-page" class="row" style="width: 25%;">
  <div class="col s12 z-depth-4 card-panel">
      <form class="login-form">
        <div class="row">
          <div class="input-field col s12 center">
            <p class="center login-form-text">
              <%= t("view_devise.title_register") %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m12 l12  login-text">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m12 l12  login-text">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 m12 l12  login-text">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "current-password" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.submit t("link_devise.Sign_up"),  class: "btn waves-effect waves-light col s12" %>
          </div>
        </div>
        <div class="row">
          <%= render "devise/shared/links" %>
        </div>
      </form>
  </div>
</div>
<% end %>
